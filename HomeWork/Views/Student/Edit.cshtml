@model HomeWork.Models.Student


<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Edit</title>
</head>
<body>
    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()

        <div class="form-horizontal">

            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
            @Html.HiddenFor(model => model.學號)

            <div class="form-group">
                @Html.LabelFor(model => model.學號, htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-md-10">
                    @Html.EditorFor(model => model.學號, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.學號, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">
                @Html.LabelFor(model => model.姓名, htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-md-10">
                    @Html.EditorFor(model => model.姓名, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.姓名, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">
                @Html.LabelFor(model => model.生日, htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-md-10">
                    @Html.EditorFor(model => model.生日, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.生日, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">
                @Html.LabelFor(model => model.Email, htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-md-10">
                    @Html.EditorFor(model => model.Email, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.Email, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">
                <div class="col-md-offset-2 col-md-10">
                    <input type="submit" value="Save" class="btn btn-default" />
                </div>
            </div>
        </div>
    }

    <table class="table" border=1>
        <thead>
            <tr>
                <th>學號</th>
                <th>姓名</th>
                <th>生日</th>
                <th>Email</th>
                <th></th>
            </tr>
        </thead>


        <tbody>

            @foreach (var student in ViewData["Students"] as IEnumerable<HomeWork.Models.Student>)
            {
                <tr>
                    <th>@student.學號</th>
                    <th>@student.姓名</th>
                    <th class="birthday">@student.生日</th>
                    <th>@student.Email</th>
                    <th>
                        @using (Html.BeginForm("Delete", "Student", new { id = student.學號 }, FormMethod.Post, new { @class = "Delete" }))
                        {
                            @Html.Hidden("學號", student.學號)
                            <input type="submit" value="刪除" class="btn btn-default">
                        }
                        <a class="btn btn-default" href='@Url.Action("Edit", "Student", new { id = student.學號 })'>編輯</a>
                    </th>
                </tr>
            }

        </tbody>
    </table>


    <script>

        function formatDate(date) {

            var d = new Date(date),
                month = '' + (d.getMonth() + 1),
                day = '' + d.getDate(),
                year = d.getFullYear();

            console.log(date)

            if (month.length < 2)
                month = '0' + month;
            if (day.length < 2)
                day = '0' + day;

            return [year, month, day].join('-');
        }

        let birthdayValue = document.querySelectorAll('.birthday');
        console.log(birthdayValue)

        for (var i = 0; i < birthdayValue.length; i++) {
            birthdayValue[i].textContent = formatDate(birthdayValue[i].textContent)
        }
    </script>

</body>
</html>
