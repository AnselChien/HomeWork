@model HomeWork.Models.Class


<!DOCTYPE html>

<html>

<body>

    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()

        <div class="form-horizontal">
            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
            <div class="form-group">
                @Html.LabelFor(model => model.課號, htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-md-10">
                    @Html.EditorFor(model => model.課號, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.課號, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">
                @Html.LabelFor(model => model.課名, htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-md-10">
                    @Html.EditorFor(model => model.課名, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.課名, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">
                @Html.LabelFor(model => model.學分數, htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-md-10">
                    @Html.EditorFor(model => model.學分數, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.學分數, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">
                @Html.LabelFor(model => model.上課地點, htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-md-10">
                    @Html.EditorFor(model => model.上課地點, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.上課地點, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">
                @Html.LabelFor(model => model.講師名字, htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-md-10">
                    @Html.EditorFor(model => model.講師名字, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.講師名字, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">
                <div class="col-md-offset-2 col-md-10">
                    <input type="submit" value="新增" class="btn btn-default" />
                </div>
            </div>
        </div>
    }

    <table class="table" border=1>
        <thead>
            <tr>
                <th>課號</th>
                <th>課名</th>
                <th>學分數</th>
                <th>上課地點</th>
                <th>講師名字</th>
                <th></th>
            </tr>
        </thead>


        <tbody>

            @foreach (var _class in ViewData["Classes"] as IEnumerable<HomeWork.Models.Class>)
            {
                <tr>
                    <th>@_class.課號</th>
                    <th>@_class.課名</th>
                    <th>@_class.學分數</th>
                    <th>@_class.上課地點</th>
                    <th>@_class.講師名字</th>
                    <th>
                        @using (Html.BeginForm("Delete", "Class", new { id = _class.課號 }, FormMethod.Post, new { @class = "Delete" }))
                        {
                            @Html.Hidden("學號", _class.課號)
                            <input type="submit" value="刪除" class="btn btn-default">
                        }
                        <a class="btn btn-default" href='@Url.Action("Edit", "Class", new { id = _class.課號 })'>編輯</a>
                    </th>
                </tr>
            }

        </tbody>
    </table>
</body>
</html>
